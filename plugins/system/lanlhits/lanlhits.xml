<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>System - Lanl Hits</name>
    <author>BK Design Solutions</author>
    <creationDate>May 2021</creationDate>
    <copyright>Copyright (C) 2021 BK Design Solutions</copyright>
    <license>Private</license>
    <authorEmail>bh@bkdesignsolutions.com</authorEmail>
    <authorUrl>https://bkdesignsolutions.com</authorUrl>
    <version>2.0.0</version>
    <description>Custom plugin for lanl.gov to track the number of times a menu item is clicked</description>
    <files>
        <folder>tables</folder>
        <filename plugin="lanlhits">lanlhits.php</filename>
        <filename>install.mysql.sql</filename>
        <filename>uninstall.mysql.sql</filename>
    </files>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">install.mysql.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">uninstall.mysql.sql</file>
        </sql>
    </uninstall>
</extension>
